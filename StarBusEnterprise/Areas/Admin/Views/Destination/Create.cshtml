


@model StarBusEnterprise.Models.DomainWork.DestantionTable

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<style>
    .form-group {
        color: black;
        border-color: black;
    }
    .form-control {
        border-color: black;
        color: black;
    }
</style>
<div class="container">
    
    <div class="col col-lg-12">
        <h4 style="text-align:center;">StarBus DestinationName </h4>
        <hr />
    </div>
    <div class="col-md-12">
        <form id="MAnageClient" class="col-md-12">
            @Html.AntiForgeryToken()


            <input type="hidden" name="Id" class="form-control" value="@Model.Id" />
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-3">
                        <label class="col-form-label" for="startpoint">From:</label>
                    </div>
                    <div class="col-md-8">
                        <select class="form-control" id="startpoint" name="startpoint" data-val="true" data-val-required="Please Select.">
                            <option selected disabled>--select--</option>
                            @foreach (var item in Model.startFromTables)
                            {
                                <option value="@item.Id" selected="@(item.Id==Model.startpoint)">@item.StartPoint</option>
                            }
                        </select>
                        <span class="field-validation-valid text-danger" data-valmsg-for="startpoint" data-valmsg-replace="true"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label" for="DestinationName"> DestinationName</label>
                <input class="form-control" type="text" data-val="true" data-val-length="less data" data-val-length-min="4"
                       data-val-required="The DestinationName field is required." id="DestinationName" name="DestinationName" value="@Model.DestinationName">
                <span class="text-danger field-validation-valid" data-valmsg-for="DestinationName" data-valmsg-replace="true"></span>
            </div>



            <div class="form-group">


                <a class="btn btn-success btn-group" onclick="saveSpecification()"><i class="fas fa-save"> </i></a>

                <a class="btn btn-danger btn-group" onclick="Delete()"><i class="fas fa-trash-alt"></i></a>
            </div>
        </form>
    </div>
</div>
<div id="domMessage" style="display:none;">
    <h1>We are processing your request.  Please be patient.</h1>
</div>

